<div class="row">
    <div class="col-lg-12">
        <h1>Editando</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Basic Form Elements
            </div>
            <div class="panel-body">
                <div class="row">

                    <% if @admin.errors.any? %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                            
                            <ul>
                                <% @admin.errors.full_messages.each do |message| %>
                                <li><%= message %></li>
                                <% end %>
                            </ul>
                        </div>
                    <% end %>
                    <div class="col-lg-6">
                        <%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>
                            <div class="form-group">
                                <%= form.label :email %>
                                <%= form.text_field :email, class:"form-control", placeholder:"Email do administrador" %>
                            </div>

                            <div class="form-group">
                                <%= form.label :password %>
                                <%= form.password_field :password, class:"form-control", placeholder:"Senha do administrador" %>
                            </div>

                            <div class="form-group">
                                <%= form.label :password_confirmation %>
                                <%= form.password_field :password_confirmation, class:"form-control", placeholder:"Confirme a Senha" %>
                            </div>

                            <button type="sbmit" class="btn btn-primary" >
                                salvar
                            </button>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>