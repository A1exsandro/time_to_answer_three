<h1>listando os Administradores</h1>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>
                    <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle" do %>
                        <i class="fas fa-trash">+</i>
                    <% end %>
                </th>
            </tr>
        </thead>
        <tbody>
            <% @admins.each do |admin| %>
                <tr>
                    <td><%= admin.id %></td>
                    <td><%= admin.email %></td>
                    <td >
                        <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-info btn-circle" do %>
                            <i class="fas fa-info-circle">E</i>
                        <% end %>
                    </td >
                    <td >
                        <%= link_to admins_backoffice_admin_path(admin), method: :delete, class:"btn btn-danger btn-circle", data: { confirm: "Deseja realmente excluir esse administrador?" } do %>
                            <i class="fas fa-trash">D</i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <div class="text-center">
        <%= paginate @admins %>
    </div>
</div>
