<h1>listando os Administradores</h1>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @admins.each do |admin| %>
                <tr>
                    <td><%= admin.id %></td>
                    <td><%= admin.email %></td>
                    <td >
                        <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-info btn-circle" do %>
                            <i class="fas fa-info-circle"></i>
                        <% end %>
                    </td >
                    <td >
                        <a href="#" class="btn btn-danger btn-circle">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
